{
  "manifest_version": 3,
  "name": "Past Portal - Historical Events on New Tab",
  "short_name": "PastPortal",
  "version": "2.0.0",
  "description": "Transform your new tab into a time machine! Discover historical events, save favorites, and explore the past with beautiful visuals.",
  "author": "Maysam Serni",
  "homepage_url": "https://github.com/imay-dev/past-portal",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "chrome_url_overrides": { "newtab": "newtab.html" },
  "permissions": ["storage"],
  "offline_enabled": true,
  "options_page": "bookmarks.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
