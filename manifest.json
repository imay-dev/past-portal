{
  "manifest_version": 3,
  "name": "PastPortal",
  "short_name": "PastPortal",
  "version": "1.0",
  "description": "Daily historical journeys through time",
  "author": "Maysam Serni",
  "homepage_url": "https://github.com/imay-dev/past-portal",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "chrome_url_overrides": { "newtab": "newtab.html" },
  "permissions": ["storage"],
  "offline_enabled": true,
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
